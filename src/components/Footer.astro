---
import { getCollection } from "astro:content";
import { Twitter, Instagram, Linkedin } from "lucide-astro";

const currentYear = new Date().getFullYear();

const projects = (await getCollection("servicios")).sort(
	(a, b) =>
		(b.data.publishDate?.valueOf() ?? 0) - (a.data.publishDate?.valueOf() ?? 0)
);
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 mt-auto">
	<div
		class="max-w-7xl mx-auto px-6 py-12 grid gap-10 md:grid-cols-3 text-center md:text-left"
	>
		<!-- üß≠ Servicios -->
		<div>
			<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
				Servicios
			</h3>
			<ul class="space-y-2">
				{projects.map((project) => (
					<li>
						<a
							href={`/servicios/${project.slug}`}
							class="text-gray-600 dark:text-gray-300 hover:text-[#D53983] transition-colors"
						>
							{project.data.title}
						</a>
					</li>
				))}
			</ul>
		</div>

		<!-- üíå Contacto -->
		<div class="flex flex-col items-center md:items-start">
			<p class="text-gray-700 dark:text-gray-300 mb-2">
				Hecho con <span class="text-[#D53983]">‚ù§Ô∏è</span> por Darianela Pi√±eiro
			</p>
			<a
				href="mailto:info@psicodari.com"
				class="text-[#009C87] hover:underline"
			>
				info@psicodari.com
			</a>
		</div>

		<!-- üåê Redes Sociales -->
		<div class="flex flex-col items-center md:items-end gap-3">
			<p class="text-gray-700 dark:text-gray-400">¬© {currentYear} Radev</p>
			<div class="flex gap-5">
				<a
					href="https://twitter.com/PsicoDari"
					target="_blank"
					class="flex items-center gap-2 text-gray-500 hover:text-[#1DA1F2] transition-colors"
					aria-label="Twitter"
				>
					<Twitter size={20} />
					<span class="hidden sm:inline">Twitter</span>
				</a>

				<a
					href="https://www.instagram.com/psicodari"
					target="_blank"
					class="flex items-center gap-2 text-gray-500 hover:text-[#E1306C] transition-colors"
					aria-label="Instagram"
				>
					<Instagram size={20} />
					<span class="hidden sm:inline">Instagram</span>
				</a>

				<a
					href="https://www.linkedin.com/in/darianela-pi√±eiro-morillo-47525549"
					target="_blank"
					class="flex items-center gap-2 text-gray-500 hover:text-[#0077B5] transition-colors"
					aria-label="LinkedIn"
				>
					<Linkedin size={20} />
					<span class="hidden sm:inline">LinkedIn</span>
				</a>
			</div>
		</div>
	</div>
</footer>
