---
import '../styles/global.css';

interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
	author?: string;
}

const { align = 'center', tagline, title, author} = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		{tagline && <p class="tagline">{tagline}</p>}
		{author && <p class="author"> {author}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
		
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.tagline {
			color: var(--accent-green);
		}

	.author{
		color: var(--accent-regular);
		text-align: center;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
			text-align: center;
		}

		.tagline {
			color: #329D85 !important;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
